<div class="width-20vw background-color-gunmetal position-sticky height-100vh p-4">
  <div class="div">
    <div class="my-4">
      <%= form_with(url: results_path, method: :get) do %>
        <%= text_field_tag :q, "", class: "width-100", placeholder: "Search a tag" %>
      <% end %>
    </div>

    <div class="my-4">
      <%= link_to root_path do %>
        <h4>💻 Notes</h4>
      <% end %>
      <%= link_to root_path do %>
        <h4>⏱ Lists</h4>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= link_to root_path, class: "btn btn-light mx-1" do %>
      <h5 class="mb-0">🗓</h5>
    <% end %>
    <%= link_to root_path, class: "btn btn-light mx-1" do %>
      <h5 class="mb-0">🏷</h5>
    <% end %>
  </div>
</div>
