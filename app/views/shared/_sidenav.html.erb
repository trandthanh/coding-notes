<div class="width-20vw background-color-lavender-gray position-sticky height-100vh p-4">
  <div class="div">
    <div class="my-4">
      <%= form_tag results_path, method: :get do %>
        <%= text_field_tag :q,
          params[:q],
          class: "width-100",
          placeholder: "Search"
        %>
      <% end %>
    </div>

    <div class="my-4">
      <div class="my-2">
        <%= link_to "#" do %>
          <h4>💻 Notes</h4>
        <% end %>

        <% all_user_notes.each do |note| %>
          <%= link_to note_path(note) do %>
            <div>
              <%= note.title %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="my-2">
        <%= link_to root_path do %>
          <h4>⏱ Lists</h4>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= link_to root_path, class: "btn btn-light mx-1" do %>
      <h5 class="mb-0">🗓</h5>
    <% end %>
    <%= link_to root_path, class: "btn btn-light mx-1" do %>
      <h5 class="mb-0">🏷</h5>
    <% end %>
  </div>

  <div class="my-4">
    <% user_tags.each do |tag| %>
      <%= link_to "##{tag.name}","#", class: "badge badge-dark" %>
    <% end %>
  </div>
</div>
